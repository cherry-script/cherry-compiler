{
    "name": "@ren-lang/compiler",
    "bin": {
        "ren": "./bin/ren.js"
    },
    "version": "0.0.1",
    "description": "The compiler for Ren: a dynamically typed, functional scripting language.",
    "scripts": {
        "switch:lib": "cat elm.package.json > elm.json",
        "switch:app": "cat elm.application.json > elm.json",
        "build": "./scripts/build.js --production",
        "build:dev": "./scripts/build.js",
        "watch": "./scripts/build.js -w",
        "link": "npm link",
        "unlink": "npm unlink ren"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ren-lang/compiler.git"
    },
    "keywords": [
        "programming-language",
        "compiler",
        "functional",
        "elm"
    ],
    "author": "Hayleigh Thompson",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ren-lang/compiler/issues"
    },
    "homepage": "https://github.com/ren-lang/compiler#readme",
    "dependencies": {
        "chalk": "^5.0.1",
        "gitly": "^2.2.1"
    },
    "devDependencies": {
        "elm-doc-preview": "^1.0.7",
        "elm-test": "*",
        "esbuild": "^0.14.49",
        "esbuild-plugin-elm": "^0.0.11-1"
    }
}